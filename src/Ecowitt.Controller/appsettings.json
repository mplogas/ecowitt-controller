{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Ecowitt.Controller.Mqtt": "Debug"
      }
    }
  },
  "AllowedHosts": "*",
  "mqtt": {
    "host": "",
    "user": "",
    "password": "",
    "port": 1883,
    "basetopic": "ec-dev",
    "clientId": "ecowitt-controller",
    "reconnect": true,
    "reconnectAttemps": 5    
  },
  "ecowitt": {
    "pollingInterval": 3,
    "autodiscovery": true
  },
  "controller": {
    "precision": 2,
    "unit": "metric",
    "publishingInterval": 5,
    "homeassistantdiscovery": true
  }
}
