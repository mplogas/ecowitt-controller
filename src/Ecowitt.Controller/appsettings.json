{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Ecowitt.Controller"
    }
  },  
  "AllowedHosts": "*",
  "mqtt": {
    "port": 1883,
    "topic": "ecowitt",
    "clientId": "ecowitt-controller"
  },
  "ecowitt": {
    "pollingInterval": 30,
    "autodiscovery": true,
    "retries": 2,
    "gateways": [
      {
        "ip": "192.168.103.162",
        "username": "",
        "password": ""
      }
    ]
  },
  "controller": {
    "precision": 2,
    "unit": "metric"
  }
}
